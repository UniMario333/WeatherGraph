<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/clouds2"
        tools:context=".Graph">

    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/temperatureAverageChart"
            android:layout_width="346dp"
            android:layout_height="246dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="138dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="347dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="33dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Umidità"
            android:layout_width="288dp"
            android:layout_height="21dp"
            android:id="@+id/percentualeUmidita"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="413dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="297dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginEnd="63dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Velocità del vento"
            android:layout_width="290dp"
            android:layout_height="19dp"
            android:id="@+id/velocitaVento"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="449dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="263dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginEnd="61dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>